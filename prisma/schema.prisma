generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  color     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Boxer {
  id                String   @id @default(cuid())
  created_at        DateTime @default(now()) @map("created_at")
  updated_at        DateTime @updatedAt @map("updated_at")
  nickname          String?
  birthday          Int
  hometown          String
  wins              Int
  losses            Int
  draws             Int
  ranking           Int?
  agility           Int
  power             Int
  accuracy          Int
  aggression        Int
  reflex            Int
  footwork          Int
  evasion           Int
  blocking          Int
  reaction          Int
  conditioning      Int
  hp                Int
  recovery          Int
  chin              Int
  body              Int
  mental            Int
  awareness         Int
  danger_state      Int
  desperation_state Int
  fight_iq          Int
  first_name        String
  hand_speed        Int
  is_champion       Boolean
  is_user           Boolean
  last_name         String
}
